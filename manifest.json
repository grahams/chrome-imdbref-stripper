{
	"name": "IMDB Ref Stripper",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Removes IMDB referral tokens from URL query strings.",
    "homepage_url": "https://github.com/grahams/chrome-imdbref-stripper",
	"icons" :{
		"48" : "icon-48.png",
		"128" : "icon-128.png"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": [
		"tabs"
	],
    "offline_enabled": true
}
